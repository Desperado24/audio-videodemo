<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".audiorecord.AudioRecordActivity">

    <Button
        android:id="@+id/tv_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Record!"
        />

    <Button
        android:id="@+id/tv_convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert to wav!"
        />

    <Button
        android:id="@+id/tv_play_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play by static!"
        />

    <Button
        android:id="@+id/tv_play_steam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play by stream!"
        />

    <Button
        android:id="@+id/tv_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopPlay"
        />
</LinearLayout>